{{#if isFinished}}
  <h5 id="loading-bar-text" class="pull-left">{{uploadContainer.uploadCount}} files uploaded</h5>
{{else}}
  <h5 id="loading-bar-text" class="pull-left">{{uploadContainer.uploadsRemaining}} files remaining</h5>
{{/if}}
  <i class="fa fa-times pull-right close-loading-bar-button" {{action "closeLoadingBar"}}></i>
<br>
<br>
<div class="float-clear"></div>

  <div class="progress" id="loading-bar">
    <div class="progress-bar {{finished}}" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
      <span class="sr-only">abc</span>
    </div>
  </div>
